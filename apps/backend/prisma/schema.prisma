datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id         String    @id @default(uuid())
  fileName   String
  mimeType   String
  createdAt  DateTime  @default(now())
  content    Bytes
  Purchase   Purchase? @relation(fields: [purchaseId], references: [id])
  purchaseId String?

  @@index([createdAt])
}

model Buyer {
  filecoinMinerId String     @id
  name            String?
  Purchase        Purchase[]
}

model Seller {
  irecId        String     @id
  name          String
  address       String
  contactPerson String
  Purchase      Purchase[]
}

model Certificate {
  id                    String     @id @default(uuid())
  generatorName         String
  generatorId           String
  namePlateCapacity     String
  namePlateCapacityUnit String
  fuelType              String
  generationStart       DateTime
  generationEnd         DateTime
  Purchase              Purchase[]
}

model Purchase {
  id                   String      @id @default(uuid())
  certificate          Certificate @relation(fields: [certificateId], references: [id])
  certificateId        String
  buyer                Buyer?      @relation(fields: [buyerFilecoinMinerId], references: [filecoinMinerId])
  buyerFilecoinMinerId String?
  seller               Seller?     @relation(fields: [sellerIrecId], references: [irecId])
  sellerIrecId         String?
  file                 File[]
  recsSold             Int
  recsTransactions     Json
}
